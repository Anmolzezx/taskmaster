# Environment Configuration
NODE_ENV=development
PORT=5000

# Database Configuration (Supabase Connection Pooler - Recommended for Production)
# Get connection string from: Supabase Dashboard → Database → Connection Pooling → Session Mode
# For Render deployment, use the pooler connection (port 6543)
DB_HOST=aws-1-[region].pooler.supabase.com
DB_PORT=6543
DB_NAME=postgres
DB_USER=postgres.[your-project-id]
DB_PASSWORD=your_database_password_here

# JWT Configuration
# IMPORTANT: Generate strong random secrets for production
# Generate using: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=generate_a_strong_random_secret_here_64_characters_minimum
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=generate_a_different_strong_random_secret_here_64_characters
JWT_REFRESH_EXPIRES_IN=7d

# CORS Configuration
# For development: use *
# For production: set to your frontend domain
CORS_ORIGIN=*

# File Upload (Optional - for future use)
MAX_FILE_SIZE=5242880
UPLOAD_DIR=uploads
